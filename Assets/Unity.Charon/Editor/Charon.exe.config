<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, Charon, Culture=neutral, PublicKeyToken=1b44e1d426115821" />
	</configSections>
	
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/>
	</startup>

	<appSettings>
		<!--add key="AppData" value="#"/-->
	</appSettings>

	<log4net>
		<root>
			<level value="DEBUG" />
			<!--appender-ref ref="FileAppender"/-->
			<appender-ref ref="OutputDebugStringAppender"/>
			<appender-ref ref="TraceAppender"/>
		</root>

		<appender name="FileAppender" type="log4net.Appender.FileAppender">
			<file type="log4net.Util.PatternString" value="charon.log" />
			<appendToFile value="true" />
			<immediateFlush value="true" />
			<layout type="log4net.Layout.PatternLayout">
				<param name="ConversionPattern" value="%d [%t] %-5p %c - %m%n"/>
			</layout>
		</appender>
		<appender name="OutputDebugStringAppender" type="log4net.Appender.OutputDebugStringAppender" >
			<layout type="log4net.Layout.PatternLayout">
				<param name="ConversionPattern" value="%d [%t] %-5p %c - %m%n"/>
			</layout>
		</appender>
		<appender name="TraceAppender" type="log4net.Appender.TraceAppender">
			<layout type="log4net.Layout.PatternLayout">
				<param name="ConversionPattern" value="%d [%t] %-5p %c - %m%n"/>
			</layout>
		</appender>
	</log4net>
</configuration>
